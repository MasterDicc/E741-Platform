pragma solidity ^0.8.24;


import '../interfaces/IE741V1FactoryStorage.sol';
import '../interfaces/IVanityDevable.sol';

// We are avoiding the proxy pattern to allow for multiple factory versions to simultaneously exist
// without overloading one giant factory
contract E741V1FactoryStorage is IE741V1FactoryStorage, IVanityDevable {

    mapping(address => address[]) public getCollection;
    mapping(address => bool) public collectionExists;
    mapping(address => address) public factoryMapping; // token to creation factory mapping
    mapping(address => bool) public isFactory;
    address[] public allCollections;

    mapping(address => bool) public dev;

    modifier onlyDev() { 
        require(dev[msg.sender], "Not the developer");
         _; 
    }

    modifier onlyFactory() {
        require(isFactory[msg.sender], "Not a factory");
        _;
    }

    constructor() {
        dev[msg.sender] = true; 
    }

    function updateDev(address newDev, bool enable) external onlyDev { 
        dev[newDev] = enable; 
    }

    function setFactory(address _newFactory, bool _enable) external onlyDev {
        isFactory[_newFactory] = _enable;
    }  

    function getCollections(address token) external override view returns (address[] memory wrappers) {
        return getCollection[token];
    }

    function allCollectionsLength() external view override returns (uint) {
        return allCollections.length;
    }

    // mostly for our one time migration
    function forcePushCollection(address token, address e741, address factory) external onlyDev {
        require(!collectionExists[e741], "E741V1: Collection already exists");
        factoryMapping[e741] = factory; // store factory so we know who pushed the collection
        getCollection[token].push(e741);
        collectionExists[e741] = true;
        allCollections.push(e741);
    }

    function pushNewCollection(address token, address e741) external override onlyFactory returns (uint) {
        require(!collectionExists[e741], "E741V1: Collection already exists");
        factoryMapping[e741] = msg.sender; // store factory so we know who pushed the collection
        getCollection[token].push(e741);
        collectionExists[e741] = true;
        allCollections.push(e741);
        return allCollections.length;
    }
}
